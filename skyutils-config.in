#!/bin/sh

prefix=@prefix@
exec_prefix=@exec_prefix@
exec_prefix_set=no
pthread_lib="@SU_PTHREAD_LIB@"
pthread_cflags="@SU_PTHREAD_CFLAGS@"
solaris="@SOLARIS@"
reentrant="@SU_REENTRANT@"
dl_lib="@SU_DL_LIB@"
dl_cflags="@SU_DL_CFLAGS@"
ssl_lib="@SU_SSL_LIB@"
ssl_cflags="@SU_SSL_CFLAGS@"
arch_lib="@SU_ARCH_LIB@"
arch_cflags="@SU_ARCH_CFLAGS@"
ansi_cflags="@SU_ANSI_CFLAGS@"

usage()
{
	cat <<EOF
Usage: skyutils-config [OPTIONS]
Options:
	[--prefix[=DIR]]
	[--exec-prefix[=DIR]]
	[--version]
	[--libs]
        [--libs-static]
	[--cflags]
        [--reentrant]
EOF
	exit $1
}

if test $# -eq 0; then
	usage 1 1>&2
fi

lib_gtk=yes

while test $# -gt 0; do
  case "$1" in
  -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
  *) optarg= ;;
  esac

  case $1 in
    --prefix=*)
      prefix=$optarg
      if test $exec_prefix_set = no ; then
        exec_prefix=$optarg
      fi
      ;;
    --prefix)
      echo_prefix=yes
      ;;
    --exec-prefix=*)
      exec_prefix=$optarg
      exec_prefix_set=yes
      ;;
    --exec-prefix)
      echo_exec_prefix=yes
      ;;
    --version)
      echo @SU_MAJOR_VERSION@.@SU_MINOR_VERSION@
      ;;
    --cflags)
      echo_cflags=yes
      ;;
    --libs)
      echo_libs=yes
      ;;
    --libs-static)
      echo_libs_static=yes
      ;;
    --reentrant)
      echo_reentrant=yes
      ;;
    *)
      usage 1 1>&2
      ;;
  esac
  shift
done

if test "$echo_prefix" = "yes"; then
	echo $prefix
fi

if test "$echo_exec_prefix" = "yes"; then
	echo $exec_prefix
fi

if test "$echo_cflags" = "yes"; then
      if test @includedir@ != /usr/include ; then
        includes=-I@includedir@
      fi
      echo $includes $pthread_cflags $dl_cflags $ssl_cflags $arch_cflags $ansi_cflags
fi

if test "$echo_libs" = "yes"; then
      libdirs=-L@libdir@
      echo $pthread_lib $libdirs -lskyutils $dl_lib $ssl_lib $arch_lib $solaris
fi

if test "$echo_libs_static" = "yes"; then
      libdirs=-L@libdir@
      echo $pthread_lib $libdirs @libdir@/libskyutils.a $dl_lib $ssl_lib $arch_lib $solaris
fi

if test "$echo_reentrant" = "yes"; then
      echo $reentrant
fi
